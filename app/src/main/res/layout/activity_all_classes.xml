<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AllClasses">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:background="#471396"
        android:padding="26px"
        android:text="All classes"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginBottom="4dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="20dp"
        >
        <!-- Search bar -->
        <SearchView
            android:id="@+id/idSV"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_marginTop="6px"
            android:layout_weight="2"
            android:background="@drawable/rounded_search_background"
            android:iconifiedByDefault="false"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:queryBackground="@android:color/transparent"
            android:queryHint="Search by class name" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- ... (header and search) ... -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/classesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/border_container"
                android:padding="16dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>